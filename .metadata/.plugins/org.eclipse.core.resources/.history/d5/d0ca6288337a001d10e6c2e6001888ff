package patternPrograms;

public class Ex06 {

	public static void main(String[] args) {

		
		//     **
		//    *  *
		//   *    *
		//  *      *
		// *        *
		//  *      *
		//   *    *
		//    *  *
		//     **
		
		int space=6;
		int star=1;
		for(int i=1;i<=5;i++)
		{
			for(int j=1;j<=space;j++)
			{
				System.out.print(" ");
			}
			for(int j=1;j<=star;j++)
			{
				System.out.print("*");
			}
			space--;
			System.out.println();
		}
		int space2=1;
	    int star2=6;
		for(int i=1;i<=5;i++)
		{
			for(int j=1;j<=space2;j++)
			{
				System.out.print(" ");
			}
			for(int j=1;j<=star2;j++)
			{
				System.out.print("*");
				
			}
			space++;
			star--;
			System.out.println();
		}
		
	}

}
