		int num=1234;
	//Scanner sc=new Scanner(System.in);
    System.out.println("enter any int");
	//int s2 = sc.nextInt();
   String org = Integer.toString(num);
    String rev=" " ;
    //shivani
    
    for(int i=org.length()-1;i>=0;i--)
    {
    	char nam = org.charAt(i);
